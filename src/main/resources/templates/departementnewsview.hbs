
{{#partial "content"}}

    <div class="container">
        <div class="row">
            <div class="col-md-3 sidenav">
                <a href="">Create Employees</a>
                <a href="">Create Departments</a>
                <a href="">Create the General news</a>
                <a href="">Create the Department news</a>
                <a href="">View Employees</a>
                <a href="">View Departments</a>
                <a href="">View the General news</a>
                <a href="">View the Department news</a>
            </div>
            <div class="col-md-9">
                <div class="intro">
                    <h3>News Portal</h3>
                    <p>View employee, Department and News</p>
                </div>
                <div class="worker"></div>
                <div>
                    {{#if departmentnews}}
                        {{#each departmentnews as |e|}}
                            <div class="col-md-4">
                                <div class="ltext">
                                    <p class="text" id={{e.id}}>{{e.title}}</p><br>
                                    <p class="text" id={{e.id}}>{{e.writtenby}}</p><br>
                                    <p class="text" id={{e.id}}>{{e.content}}</p><br>
                                    <a href="/view/ranger/sightings/{{e.id}}"><button class="btn btn-info btn-md">View
                                        Sightings</button></a><br>

                                </div>
                                <br>
                            </div>
                        {{/each}}
                        <h3>Employee</h3>
                        <hr>
                        {{#each employees as |a|}}
                            <h3>{{a}}</h3>
                        {{/each}}
                        <h3>Department</h3>
                        <hr>
                        {{#each departments as |a|}}
                            <h3>{{a}}</h3>
                        {{/each}}

                    {{else}}
                        <p class="text s-title">There are no registered employees, register here <a href="/create/departmentnews">here</a></p>
                    {{/if}}
                </div>
            </div>
        </div>

    </div>




{{/partial}}

{{> layout.hbs}}